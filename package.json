{
  "name": "turbo-monorepo-cosmetologist-planner",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts, tsx}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "scripts": {
    "build": "turbo build",
    "dev": "dotenv -- turbo dev",
    "lint": "turbo lint --",
    "format": "turbo format --",
    "prepare": "husky install",
    "pre-commit": "turbo lint "
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
